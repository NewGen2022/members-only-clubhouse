<% layout('layout', { user: user }) %>

<form action="/create-msg" id="create-msg-form" method="POST">
    <div id="form-header">Create message</div>

    <label for="title">Title</label>
    <input type="text" name="title" id="title" required />

    <label for="content">Content</label>
    <textarea
        type="text"
        name="content"
        id="content"
        minlength="10"
        maxlength="1000"
        rows="4"
        cols="50"
        placeholder="Enter at least 10 characters but no more than 1000."
        required
    ></textarea>

    <button type="submit">Submit</button>
</form>
